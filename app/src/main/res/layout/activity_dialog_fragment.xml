<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:orientation="vertical">

        <include
            android:id="@+id/tl_layout"
            layout="@layout/view_toolbar_layout" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/bt_dialog_fragment_full"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60"
            android:layout_margin="@dimen/dp_10"
            android:gravity="center"
            android:text="全屏的DialogFragment"
            android:textSize="@dimen/sp_18" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/bt_dialog_fragment_wrap"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60"
            android:layout_margin="@dimen/dp_10"
            android:gravity="center"
            android:text="内容包裹的DialogFragment"
            android:textSize="@dimen/sp_18" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/bt_dialog_fragment_margin"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60"
            android:layout_margin="@dimen/dp_10"
            android:gravity="center"
            android:text="外间距的DialogFragment"
            android:textSize="@dimen/sp_18" />
    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>