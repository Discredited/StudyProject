<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_information"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="@string/app_name" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_cached"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:gravity="center"
            android:minWidth="80dp"
            android:text="Cached"
            android:textColor="@color/color_selector_selected_text_33_to_99"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tv_fixed"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_fixed"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:gravity="center"
            android:minWidth="80dp"
            android:text="Fixed"
            android:textColor="@color/color_selector_selected_text_33_to_99"
            app:layout_constraintBottom_toBottomOf="@+id/tv_cached"
            app:layout_constraintEnd_toStartOf="@+id/tv_scheduled"
            app:layout_constraintStart_toEndOf="@+id/tv_cached"
            app:layout_constraintTop_toTopOf="@+id/tv_cached" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_scheduled"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:gravity="center"
            android:minWidth="80dp"
            android:text="Schedule"
            android:textColor="@color/color_selector_selected_text_33_to_99"
            app:layout_constraintBottom_toBottomOf="@+id/tv_cached"
            app:layout_constraintEnd_toStartOf="@+id/tv_single"
            app:layout_constraintStart_toEndOf="@+id/tv_fixed"
            app:layout_constraintTop_toTopOf="@+id/tv_cached" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_single"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:gravity="center"
            android:minWidth="80dp"
            android:text="Single"
            android:textColor="@color/color_selector_selected_text_33_to_99"
            app:layout_constraintBottom_toBottomOf="@+id/tv_cached"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_scheduled"
            app:layout_constraintTop_toTopOf="@+id/tv_cached" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>