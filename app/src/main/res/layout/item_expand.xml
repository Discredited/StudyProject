<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_30"
        android:background="@drawable/shape_rect_gray_radius_5"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvExpandName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_50"
            android:textSize="@dimen/sp_16"
            tools:text="- Expand Name -" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvExpandDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/common_margin"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginEnd="@dimen/common_margin"
            android:ellipsize="end"
            android:gravity="center"
            android:lines="2"
            android:textSize="@dimen/sp_16"
            tools:text="Expand Description Expand Description Expand Description Expand Description Expand Description" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivExpandCover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/common_margin"
            android:layout_marginTop="@dimen/dp_20"
            tools:src="@color/color_yellow" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivExpandAvatar"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_60"
        android:layout_gravity="center_horizontal"
        android:src="@color/color_theme" />
</FrameLayout>