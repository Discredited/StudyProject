<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <include
        android:id="@+id/tl_layout"
        layout="@layout/view_toolbar_layout" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvCustomLayoutManager"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_62"
        android:gravity="center"
        android:text="自定义LayoutManager"
        android:textSize="@dimen/sp_20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvItemDecoration"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_62"
        android:gravity="center"
        android:text="自定义分割线"
        android:textSize="@dimen/sp_20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvCustomLayoutManager" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvBaseAdapter"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_62"
        android:gravity="center"
        android:text="使用BaseAdapter"
        android:textSize="@dimen/sp_20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvItemDecoration" />
</androidx.constraintlayout.widget.ConstraintLayout>